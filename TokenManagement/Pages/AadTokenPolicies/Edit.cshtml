@page
@model TokenManagement.Pages.AadTokenPolicies.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Edit Azure TokenLifetimePolicy</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TokenLifetimePolicyDto.Id" />
            <div class="form-group">
                <label asp-for="TokenLifetimePolicyDto.Definition" class="control-label"></label>
                <input asp-for="TokenLifetimePolicyDto.Definition" class="form-control" />
                <span asp-validation-for="TokenLifetimePolicyDto.Definition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TokenLifetimePolicyDto.DisplayName" class="control-label"></label>
                <input asp-for="TokenLifetimePolicyDto.DisplayName" class="form-control" />
                <span asp-validation-for="TokenLifetimePolicyDto.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    <input class="big_checkbox" asp-for="TokenLifetimePolicyDto.IsOrganizationDefault" /> @Html.DisplayNameFor(model => model.TokenLifetimePolicyDto.IsOrganizationDefault)
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
